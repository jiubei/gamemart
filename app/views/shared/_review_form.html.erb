<%= form_for([@game, @game.reviews.build], html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new review..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>

<% end %>
