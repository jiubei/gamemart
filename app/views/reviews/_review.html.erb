<li id="review-<%= review.id %>">
  <%= link_to gravatar_for(review.user, size: 50), review.user %>
  <span class="user"><%= link_to review.user.username, review.user %></span>
  <div class="game_reviewed"><%= link_to review.game.name, review.game %></div>
  <span class="content">
    <%= review.content %>
    <%= image_tag mreview.picture.url if review.picture? %>

  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
    <% if current_user?(review.user) %>
      <%= link_to "delete", review, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
