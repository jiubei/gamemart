<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
      <h2>
        <%= @user.first_name + " " + @user.last_name %>
      </h2>
    </section>
  </aside>
</div>
